<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="myapp.myecommerce.myapplication">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="myapp.myecommerce.myapplication.Admin.AdminCheckNewProductsActivity"></activity>
        <activity android:name="myapp.myecommerce.myapplication.Admin.AdminHomeActivity" />
        <activity
            android:name="myapp.myecommerce.myapplication.Sellers.HomeSellerActivity"
            android:label="@string/title_activity_home_seller" />
        <activity
            android:name="myapp.myecommerce.myapplication.Sellers.SellerLoginActivity"
            android:screenOrientation="locked" />
        <activity
            android:name="myapp.myecommerce.myapplication.Sellers.SellerRegistrationActivity"
            android:screenOrientation="locked" />
        <activity
            android:name="myapp.myecommerce.myapplication.Buyers.ResetPasswordActivity"
            android:screenOrientation="locked" />
        <activity
            android:name="myapp.myecommerce.myapplication.Admin.AdminMaintainProductsActivity"
            android:screenOrientation="locked" />
        <activity
            android:name="myapp.myecommerce.myapplication.Buyers.SearchProductsActivity"
            android:screenOrientation="locked" />
        <activity
            android:name="myapp.myecommerce.myapplication.Admin.AdminUserProductsActivity"
            android:screenOrientation="locked" />
        <activity
            android:name="myapp.myecommerce.myapplication.Admin.AdminNewOrdersActivity"
            android:screenOrientation="locked" />
        <activity
            android:name="myapp.myecommerce.myapplication.Buyers.ConfirmFinalOrderActivity"
            android:screenOrientation="locked" />
        <activity
            android:name="myapp.myecommerce.myapplication.Buyers.CartActivity"
            android:screenOrientation="locked" />
        <activity
            android:name="myapp.myecommerce.myapplication.Buyers.ProductDetailsActivity"
            android:screenOrientation="locked" />
        <activity
            android:name="myapp.myecommerce.myapplication.Buyers.SettingsActivity"
            android:screenOrientation="locked" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:screenOrientation="locked"
            android:theme="@style/Base.Theme.AppCompat" /> <!-- optional (needed if default theme has no action bar) -->
        <activity
            android:name="myapp.myecommerce.myapplication.Buyers.HomeActivity"
            android:label="@string/title_activity_home"
            android:screenOrientation="locked"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="myapp.myecommerce.myapplication.Sellers.SellerProductCategoryActivity"
            android:screenOrientation="locked" />
        <activity
            android:name="myapp.myecommerce.myapplication.Sellers.SellerAddNewProductActivity"
            android:screenOrientation="locked" />
        <activity
            android:name="myapp.myecommerce.myapplication.Buyers.RegisterActivity"
            android:screenOrientation="locked" />
        <activity
            android:name="myapp.myecommerce.myapplication.Buyers.LoginActivity"
            android:screenOrientation="locked" />
        <activity
            android:name="myapp.myecommerce.myapplication.Buyers.MainActivity"
            android:screenOrientation="locked">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>